<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="@string/prefkey_cat_ui_reminder_dialog"
        android:title="@string/preference_category_reminder_dialog"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/prefkey_reminder_dialog_close_keyboard_on_timepicker_use"
            android:title="@string/preference_reminder_dialog_close_keyboard_on_timepicker_use"
            android:summary="@string/preference_reminder_dialog_close_keyboard_on_timepicker_use_descr"
            app:singleLineTitle="false"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/prefkey_reminder_dialog_timepicker_show_keyboard_button"
            android:title="@string/preference_reminder_dialog_timepicker_show_keyboard_button"
            android:summary="@string/preference_reminder_dialog_timepicker_show_keyboard_button_descr"
            app:singleLineTitle="false"
            app:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/prefkey_reminder_dialog_timepicker_customize_size"
            android:title="@string/preference_reminder_dialog_timepicker_customize_size"
            android:summary="@string/preference_reminder_dialog_timepicker_customize_size_descr"
            app:singleLineTitle="false"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            android:defaultValue="12"
            android:key="@string/prefkey_reminder_dialog_timepicker_text_size"
            android:title="@string/preference_reminder_dialog_timepicker_text_size"
            app:iconSpaceReserved="false"
            />

        <EditTextPreference
            android:defaultValue="175"
            android:key="@string/prefkey_reminder_dialog_timepicker_height"
            android:title="@string/preference_reminder_dialog_timepicker_height"
            app:iconSpaceReserved="false"
            />
        <Preference
            android:key="@string/prefkey_reminder_dialog_show"
            android:title="@string/preference_reminder_dialog_show"
            app:iconSpaceReserved="false"
        />

    </PreferenceCategory>
</PreferenceScreen>
